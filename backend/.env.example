# Postgres credentials (shared by host + Compose)
POSTGRES_USER=kycc_user
POSTGRES_PASSWORD=kycc_pass
POSTGRES_DB=kycc_db
POSTGRES_PORT=5433

# Host URL (when running backend on your machine outside Docker)
DATABASE_URL=postgresql://kycc_user:kycc_pass@localhost:5433/kycc_db

# SQLite fallback for dev/testing
DEV_DATABASE_URL=sqlite:///./dev.db

# Dev-only flags
AUTO_CREATE_TABLES=1
FORCE_SQLITE_FALLBACK=0
